root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

; Golang and C
[*.{go,c,sql,hcl}]
indent_style = tab
indent_size = 4

; YAML
[*.yaml]
indent_style = space
indent_size = 2
